        android:color="#33FFFFFF" />

    <!-- 描边 -->
    <stroke
        android:width="0dp"
        android:color="#FFFFFF" />

    <!-- 圆角 -->
    <corners
        android:topLeftRadius="15dp"
        android:topRightRadius="15dp"
        android:bottomLeftRadius="15dp"
        android:bottomRightRadius="15dp" />

	<!-- 内边距 -->
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />

</shape>